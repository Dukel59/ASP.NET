@model TicketOffice.BLL.VMs.Ticket.InfoTicket

@{ 
    ViewBag.Title = "Удаление билета";
}

<form asp-action="Delete" asp-controller="Ticket" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="CreationDate" class="control-label">Время создания: </label>
        <span><b>@Html.DisplayFor(model => model.CreationDate)</b></span> <br />

        <label asp-for="TrainNumber" class="control-label">Номер поезда: </label>
        <span><b>@Html.DisplayFor(model => model.TrainNumber)</b></span> <br />

        <label asp-for="Destination" class="control-label">Маршрут: </label>
        <span><b>@Html.DisplayFor(model => model.Destination)</b></span> <br />

        <label asp-for="Departs" class="control-label">Время отправления: </label>
        <span><b>@Html.DisplayFor(model => model.Departs)</b></span> <br />

        <label asp-for="Track" class="control-label">Номер пути: </label>
        <span><b>@Html.DisplayFor(model => model.Track)</b></span> <br />

        <label asp-for="TrainCarNumber" class="control-label">Номер вагона: </label>
        <span><b>@Html.DisplayFor(model => model.TrainCarNumber)</b></span> <br />

        <label asp-for="PlaceNumber" class="control-label">Номер места: </label>
        <span><b>@Html.DisplayFor(model => model.PlaceNumber)</b></span> <br />
    </div>
    <div class="form-group">
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </div>
</form>
