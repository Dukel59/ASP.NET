@model TicketOffice.BLL.VMs.User.RegisterUser

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Login">Введите логин</label><br />
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="Name">Введите Ваше имя</label><br />
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div>
            <label asp-for="Age">Введите Ваш возраст</label><br />
            <input type="number" asp-for="Age" />
            <span asp-validation-for="Age" />
        </div>
        <div>
            <label asp-for="Phone">Введите Ваш номер телефона в формате ххх-хх-хх</label><br />
            <input type="tel" pattern="[0-9]{3}-[0-9]{2}-[0-9]{2}" asp-for="Phone" />
            <span asp-validation-for="Phone" />
        </div>
        <div>
            <label asp-for="Email">Введите Ваш Email</label><br />
            <input asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Регистрация" class="btn-outline-dark" />
    </div>
</form>